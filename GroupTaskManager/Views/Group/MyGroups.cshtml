@model List<GroupTaskManager.GroupTaskManager.Database.Group>

@{
    ViewData["Title"] = "My groups";
}

@section Styles {
    <link rel="stylesheet" href="~/css/mygroupsusers.css" />
}


<div class="main">
    <h1>My Groups</h1>

    <div class="group-list">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="group-item">
                <p class="group-name"> @(i+1). @Model[i].Name</p>
                <form id="show-group-form" method="get" asp-action="" asp-controller="">
                    <input type="hidden" name="Id_Group" value="@Model[i].Id" />
                    <button type="submit" class="btn-show">Show</button>
                </form>
            </div>
        }
    </div>
</div>
